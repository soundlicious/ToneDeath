<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MintTheme" parent="AppTheme">
        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:colorBackground">@color/themeColorBackground</item>
        <item name="colorAccent">@color/themeColorAccent</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:navigationBarColor">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">#304a53</item>
    </style>

    <style name="MintTheme.NoActionBar" parent="MintTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardViewStyle">
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/material_card_edge_margin</item>
        <item name="android:layout_marginRight">@dimen/material_card_edge_margin</item>
        <item name="android:layout_marginTop">@dimen/material_card_edge_margin</item>
        <item name="android:layout_marginBottom">@dimen/material_card_edge_margin</item>
        <item name="cardCornerRadius">@dimen/material_card_corner_radius</item>
        <item name="cardElevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
