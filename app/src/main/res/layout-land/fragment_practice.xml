<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.practice.PracticeActivity">

    <ImageView
        android:id="@+id/imageView_practice_corner_left"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_corner_top_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/corner" />

    <ImageView
        android:id="@+id/imageView_practice_corner_right"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_corner_bottom_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageView_practice_play"
        android:contentDescription="@string/corner" />

    <ImageButton
        android:id="@+id/button_practice_tone1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/material_color_red_700"
        android:src="@drawable/tone_1"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toTopOf="@+id/button_practice_tone3"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".4"
        app:layout_constraintStart_toEndOf="@+id/imageView_practice_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        android:contentDescription="@string/tone1" />

    <ImageButton
        android:id="@+id/button_practice_tone2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/material_color_pink_700"
        android:src="@drawable/tone_2"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toTopOf="@+id/button_practice_tone4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".4"
        app:layout_constraintStart_toEndOf="@+id/button_practice_tone1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        android:contentDescription="@string/tone2" />

    <ImageButton
        android:id="@+id/button_practice_tone3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/material_color_purple_700"
        android:src="@drawable/tone_3"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".4"
        app:layout_constraintStart_toEndOf="@+id/imageView_practice_play"
        app:layout_constraintTop_toBottomOf="@+id/button_practice_tone1"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        android:contentDescription="@string/tone3" />

    <ImageButton
        android:id="@+id/button_practice_tone4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:backgroundTint="@color/material_color_deep_purple_700"
        android:src="@drawable/tone_4"
        app:layout_constrainedHeight="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="percent"

        app:layout_constraintHeight_percent=".4"
        app:layout_constraintStart_toEndOf="@+id/button_practice_tone3"
        app:layout_constraintTop_toBottomOf="@+id/button_practice_tone2"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".2"
        android:contentDescription="@string/tone4" />

    <ImageView
        android:id="@+id/imageView_practice_play"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_play_arrow_black_24dp"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".5"
        app:layout_constraintWidth_default="percent"
        android:contentDescription="@string/play" />


    <ImageView
        android:id="@+id/imageView_practice_coin"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_coin"
        app:layout_constraintEnd_toStartOf="@+id/textView_practice_score"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/coin" />

    <TextView
        android:id="@+id/textView_practice_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        tools:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_practice_coin"
        app:layout_constraintEnd_toEndOf="@+id/imageView_practice_play"
        app:layout_constraintTop_toTopOf="@+id/imageView_practice_coin" />


</androidx.constraintlayout.widget.ConstraintLayout>